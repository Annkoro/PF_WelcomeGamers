<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 mt-5">
      <h2><i class="fas fa-comments"></i>グループの編集</h2>
      <% if @group.errors.any? %>
        <%= @group.errors.count %>件のエラーが発生しました
        <ul>
          <% @group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @group, local: true do |f| %>
      <div class="form-group">
        <%= f.label :グループ名 %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :紹介文 %>
        <%= f.text_area :introduction, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :グループ画像 %>
        <%= f.file_field :image, accept: "image/*", class: "form-control-file" %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-info btn-block mb-3' %>
      </div>
      <% if @group.owner_id == current_user.id %>
        <%= link_to "削除する", group_path(@group), class: "btn btn btn-danger btn-block  mb-3", method: :delete, "data-confirm" => "本当に削除しますか？" %><br>
      <% end %>
    <% end %>
  </div>
</div>