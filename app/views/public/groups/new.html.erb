<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 mt-5">
      <h2><i class="fas fa-comments"></i>グループを作成する</h2>
      <% if @group.errors.any? %>
        <%= @group.errors.count %>件のエラーが発生しました
        <ul>
          <% @group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @group, local: true do |f| %>
        <div class="form-group">
          <%= f.label :グループ名 %>
          <%= f.text_field :name, class: 'form-control', placeholder: "20文字以内" %>
        </div>

        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_area :introduction, class: 'form-control', placeholder: "50文字以内" %>
        </div>

        <div class="form-group">
          <%= f.label :グループ画像 %>
          <%= f.file_field :image, accept: "image/*", class: "form-control-file" %>
        </div>

        <div class="form-group">
          <%= f.submit class: 'btn btn-info btn-block  mb-3' %>
        </div>
      <% end %>
    </div>
  </div>
</div>