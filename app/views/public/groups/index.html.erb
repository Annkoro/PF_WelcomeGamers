<div class='col-md-8 offset-md-1'>
      <h2><i class="fas fa-comments"></i>グループ一覧</h2>
      <div><%=link_to "グループを作成する",new_group_path %></div>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td>
                <% if group.image.attached? %>
                  <%= image_tag group.image, size: "100x100", class: "rounded-circle" %>
                <% else %>
                  <%= image_tag 'no_image', size: "100x100", class: "rounded-circle" %>
                <% end %>
                <%#= attachment_image_tag(group, :image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
              </td>
              <td><%= link_to group.name, group_path(group) %></td>
              <td><%= group.introduction %></td>
              <td>
                <% if group.owner_id == current_user.id %>
                  <%= link_to 'Edit', edit_group_path(group), class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>