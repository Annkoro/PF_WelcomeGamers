<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 mt-5">
      <h2><i class="fas fa-comments"></i>グループ一覧</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー数</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td>
                <% if group.image.attached? %>
                  <%= image_tag group.image, size: "100x100", class: "rounded-circle" %>
                <% else %>
                  <%= image_tag 'no_image', size: "100x100", class: "rounded-circle" %>
                <% end %>
              </td>
              <td><%= link_to group.name, group_path(group) %></td>
              <td><%= group.introduction %></td>
              <td><%= group.users.count %> 人</td>
              <td>
                <% if group.owner_id == current_user.id %>
                  <%= link_to '編集する', edit_group_path(group), class: "btn btn btn-secondary" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div><%=link_to "グループを作成する",new_group_path, class: "btn btn btn-info btn-block  mb-3" %></div><br>
    </div>
  </div>
</div>