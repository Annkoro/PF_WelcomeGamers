<div class="follow_btn">
  <% if current_user != user %>
    <% if user.followed_by?(current_user) %>
      <p><%= link_to "フォローを外す", user_relationships_path(user.id), class: "btn btn btn-success", method: :delete, remote: true %></p>
    <% else %>
      <p><%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-outline-secondary", method: :post, remote: true %></p>
    <% end %>
  <% end %>
</div>