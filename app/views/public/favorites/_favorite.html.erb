<% if post.favorited_by?(current_user) %>
  <p>
    <%= link_to post_favorites_path(post), method: :delete, remote: true, class: "favorite_btn text-dark" do %>
       <i class="fas fa-heart"></i><%= post.favorites.count %> いいね
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to post_favorites_path(post), method: :post, remote: true, class: "favorite_btn text-dark" do %>
      <i class="far fa-heart"></i><%= post.favorites.count %> いいね
    <% end %>
  </p>
<% end %>