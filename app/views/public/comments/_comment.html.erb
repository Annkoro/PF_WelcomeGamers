<div id="comment_<%=comment.id%>">
  <div class="container">
  <% if comment.user.profile_image.attached? %>
    <%= image_tag comment.user.profile_image, size: "50x50", class: "rounded-circle" %>
  <% else %>
    <%= image_tag 'no_image', size: "50x50", class: "rounded-circle" %>
  <% end %>
  <%= comment.user.name %>：
  <div class="text-break">
    <%= comment.comment %>
    </div>
  <br>
  <%= comment.created_at.strftime('%Y/%m/%d %H:%M') %>
  <% if comment.user == current_user %>
    <%= link_to "コメントを削除する", post_comment_path(comment.post, comment), method: :delete, remote: true, "data-confirm" => "本当に削除しますか？" %>
  <% end %>
  </div>
</div>