 <div class="row mt-5">
  <div class="col-6 offset-3">
    <h2 class="text-center mb-4"><i class="fas fa-question"></i>お問い合わせフォーム</h2>


      <%= form_for(@contact, url: confirm_path) do |f| %>
        <div class="form-group">
          <%= f.label :name, 'お名前*' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :email, '返信先メールアドレス*' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :message, 'メッセージ*' %>
          <%= f.text_area :message, size: '10x10', class: 'form-control' %>
        </div>

        <div>
          <%= f.submit '入力内容確認', class: "btn btn-lg btn-success btn-block mb-3" %>
        </div>
      <% end %>

  </div>
</div>