<div class="container">
  <div class="row">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h2 class="text-dark bg-light p-4 mb-0"><i class="fas fa-pen"></i>新規投稿</h2>
        <div class="form-body p-4">
          <% if @post.errors.any? %>
            <%= @post.errors.count %>件のエラーが発生しました
            <ul>
              <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>

          <%= form_with model: @post do |f| %>
            <h4>募集タイトル</h4>
              <%= f.text_field :title, class:"form-control", placeholder: "30文字以内" %>
            <h4>募集文</h4>
              <%= f.text_area :caption, class:"form-control", rows:"6", placeholder: "400文字以内" %>
            <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
          <% end %>
      </div>
    </div>
  </div>
</div>