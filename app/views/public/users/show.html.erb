<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 mt-5">
      <% if current_user == @user %>
        <h2><i class="fas fa-address-card"></i>マイページ</h2>
      <% else %>
        <h2><i class="fas fa-user"></i>プロフィール</h2>
      <% end %>

    <div class="text-center">
      <div>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size: "150x150", class: "rounded-circle" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200", class: "rounded-circle" %>
        <% end %>
        <h4><%= @user.name %></h4>
      </div>
      <div>
        <p><%= link_to @user.followings.count, followings_user_path(@user) %>フォロー <%= link_to @user.followers.count, followers_user_path(@user) %>フォロワー</p>
        <% if @user == current_user %>
          <p><%= link_to "プロフィール編集", edit_user_path(current_user.id), class: "btn btn btn-secondary" %></p>
        <% end %>
        <div class="follow_btn">
         <% if current_user != @user %>
          <% if @user.followed_by?(current_user) %>
            <p><%= link_to "フォローを外す", user_relationships_path(@user.id), class: "btn btn btn-success", method: :delete %></p>
          <% else %>
            <p><%= link_to "フォローする", user_relationships_path(@user.id), class: "btn btn-outline-secondary", method: :post %></p>
          <% end %>
        <% end %>
        </div>
      </div>

      <table class="table">
        <tbody>
          <tr>
            <th>性別</th>
            <td><%= @user.gender %></td>
          </tr>
          <tr>
            <th>機種</th>
            <td><%= @user.device %></td>
          </tr>
          <tr>
            <th>VCの有無</th>
            <td><%#= @user.vc %></td>
          </tr>
        </tbody>
      </table>

        <% @posts.each do |post| %>
          <%= link_to post_path(post.id) do %>
          <p>募集タイトル：<%= post.title %></p>
          <!--<p>募集文：<%#= post.caption %></p>-->
        <% end %>
        <% end %>
      </div>

    </div>
   </div>
  </div>
</div>