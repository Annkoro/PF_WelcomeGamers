<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 mt-5">
      <h2>プロフィール</h2>

    <div class="text-center">
      <div>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size: "150x150", class: "rounded-circle" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200", class: "rounded-circle" %>
        <% end %>
        <h4><%= @user.name %></h4>
      </div>
      <div class="display">
        <p><%= link_to @user.followings.count, followings_user_path(@user) %>フォロー <%= link_to @user.followers.count, followers_user_path(@user) %>フォロワー</p>
      </div>

      <div>
        <p>性別</p>
        <p>機種：<%= @user.device %></p>
        <p>VCの有無</p>

        <% if @user == current_user %>
          <p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>
        <% end %>

        <% if current_user != @user %>
          <% if @user.followed_by?(current_user) %>
            <p><%= link_to "フォローを外す", user_relationships_path(@user.id), class: "btn btn btn-success", method: :delete %></p>
          <% else %>
            <p><%= link_to "フォローする", user_relationships_path(@user.id), class: "btn btn-outline-secondary", method: :post %></p>
          <% end %>
        <% end %>
      </div>

      <div>
        <% @posts.each do |posts| %>
          <%= link_to post_path(posts.id) do %>
          <% end %>
        <p>募集タイトル：<%= posts.title %></p>
        <p>募集文：<%= posts.caption %></p>
        <% end %>
      </div>
    </div>
   </div>
  </div>
</div>