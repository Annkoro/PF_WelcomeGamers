<div>
  <p>プロフィール画像</p>
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.profile_image, size: "150x150", class: "rounded-circle" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200", class: "rounded-circle" %>
  <% end %>
  <h4><%= @user.name %></h4>
  <p>性別</p>
  <p>機種：<%= @user.device %></p>
  <p>VCの有無</p>

  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>
  <% end %>

  <% if current_user != @user %>
    <% if @user.followed_by?(current_user) %>
      <p><%= link_to "フォロー済み", user_relationships_path(@user.id), method: :delete %></p>
    <% else %>
      <p><%= link_to "フォローする", user_relationships_path(@user.id), method: :post %></p>
    <% end %>
  <% end %>

</div>

<% @posts.each do |posts| %>
<div>
  <%= link_to post_path(posts.id) do %>
  <% end %>
<p>募集タイトル：<%= posts.title %></p>
<p>募集文：<%= posts.caption %></p>
</div>
<% end %>