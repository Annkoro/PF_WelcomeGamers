<h2>ユーザー一覧</h2>
<% @users.each do |user| %>
<div>
  <%= link_to user_path(user.id) do %>
  <table class="teble">
    <tr>
      <td><%= image_tag user.profile_image, size: "150x150", class: "rounded-circle" %></td>
      <td><%= user.name %></td>
      <td>
        <% if current_user != user %>
          <% if user.followed_by?(current_user) %>
            <p><%= link_to "フォローを外す", user_relationships_path(user.id), class: "btn btn btn-success", method: :delete %></p>
          <% else %>
            <p><%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-outline-secondary", method: :post %></p>
          <% end %>
        <% end %>
      </td>
    </tr>
  </table>
  <% end %>
</div>
<% end %>
<%= paginate @users %>