<div class="row mt-5">
  <div class="col-6 offset-3">
    <h2 class="text-center mb-4">プロフィール編集</h2>
    <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="name">ユーザーネーム</label>
        <%= f.text_field :name, autofocus: true, id: "name", placeholder: "名前", class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="profile_image">プロフィール画像</label><br>
        <%= f.file_field :profile_image, accept: "image/*" %><br>
      </div>
      <div class="form-group">
        <label for="device">使用機種</label>
        <%= f.text_field :device, class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="caption">自己紹介文</label>
        <%= f.text_area :caption, placeholder: "自己紹介文などを記入してください", class: "form-control form-control-lg" %>
      </div>
      <%= f.submit "変更を保存する", class: "btn btn-lg btn-primary btn-block mb-3" %>
    <% end %>
  </div>
</div>