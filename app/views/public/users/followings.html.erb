<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 mt-5">
      <h2>フォロ一覧</h2>

      <table class="table text-center">
        <% @users.each do|user| %>
          <tr>
            <td>
              <% if user.profile_image.attached? %>
                <%= image_tag user.profile_image, size: "100x100", class: "rounded-circle" %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100", class: "rounded-circle" %>
              <% end %>
            </td>
            <td>
              <%= link_to user_path(user) do %>
                <%= user.name %>
              <% end %>
            </td>
            <td>
              <% if current_user != user %>
                <% if user.followed_by?(current_user) %>
                  <p><%= link_to "フォローを外す", user_relationships_path(user.id), class: "btn btn btn-success", method: :delete %></p>
                <% else %>
                  <p><%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-outline-secondary", method: :post %></p>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>