<div class="row mt-5">
  <div class="col-6 offset-3">
    <h2 class="text-center mb-4"><i class="fas fa-sign-in-alt"></i>管理者ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
    </div>
  </div>

  <div class="form-group">
    <div class="actions">
      <%= f.submit "ログインする", class: "btn btn-lg btn-primary btn-block mb-3" %>
    </div>
  </div>
<% end %>

