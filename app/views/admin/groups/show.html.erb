<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 mt-5">
      <h2><i class="fas fa-comments"></i>グループ詳細</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <% if @group.image.attached? %>
                <%= image_tag @group.image, size: "100x100", class: "rounded-circle" %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100", class: "rounded-circle" %>
              <% end %>
            </td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <% @group.users.each do |member| %>
                <%= link_to admin_user_path(member.id) do %>
                  <%= member.name %><br>
                <% end %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="text-center"><%= link_to "削除する", admin_group_path(@group), class: "btn btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></div><br>
    </div>
  </div>
</div>