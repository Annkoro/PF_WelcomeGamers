<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <%= link_to 'WelcomeGamers!', '/', class: 'navbar-brand' %>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li><%= link_to new_post_path, class: "nav-link text-dark" do %><i class="fas fa-pen"></i>新規投稿<% end %></li>
          <li><%= link_to user_path(current_user.id), class:"nav-link text-dark" do %><i class="fas fa-address-card"></i>マイページ<% end %></li>
          <li><%= link_to users_path, class:"nav-link text-dark" do %><i class="fas fa-users" %></i>ユーザー一覧<% end %></li>
          <li><%= link_to posts_path, class: "nav-link text-dark" do %><i class="fas fa-handshake"></i>募集一覧<% end %></li>
          <li><%= link_to destroy_user_session_path, class:"nav-link text-dark", method: :delete do %><i class="fas fa-sign-out-alt"></i>ログアウト<% end %></li>
        <% else %>
          <li><%= link_to new_user_registration_path, class:"nav-link text-dark" do %><i class="fas fa-user-plus"></i>新規登録<% end %></li>
          <li><%= link_to new_user_session_path, class:"nav-link text-dark" do %><i class="fas fa-sign-in-alt"></i>ログイン<% end %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>